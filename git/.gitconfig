[user]
	email = mironovga@gmail.com
	name = George Mironov
[alias]
    l = log --pretty=oneline -n 20 --graph --abbrev-commit
    s = status -s
	go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
	amend = commit --amend --reuse-message=HEAD
    hreset = reset --hard
[core]
	excludesfile = ~/.gitignore
[help]
	autocorrect = 1
[merge]
	tool = vscode
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[push]
    default = current
[mergetool]
	keepBackup = false
[rebase]
	autoStash = true
[mergetool "vscode"]
	cmd = "code --wait $MERGED"
